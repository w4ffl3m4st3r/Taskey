<ruleset>
    <description>PHPCS configuration for scanning only app and src folders</description>
    <file>app</file>
    <file>src</file>
    <file>public/index.php</file>
    <rule ref="PSR12"/>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
</ruleset>